{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@api": ["app/api"],
      "@models": ["app/models"],
      "@shared/*": ["app/shared/*"]
      // "zlib": ["app/web/node_modules/browserify-zlib/lib/index.js"]
    }
  }
}
